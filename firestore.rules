rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==================== HELPER FUNCTIONS ====================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user owns the resource (using user_id field)
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Check if the resource belongs to the current user
    function isResourceOwner() {
      return isAuthenticated() && resource.data.user_id == request.auth.uid;
    }
    
    // Check if the incoming resource will belong to the current user
    function isRequestResourceOwner() {
      return isAuthenticated() && request.resource.data.user_id == request.auth.uid;
    }
    
    // ==================== USERS COLLECTION ====================
    // Allow checking if email exists (for forgot password) - no auth needed
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);
    }
    
    // Allow querying users by email (for OTP verification) - no auth needed
    match /users {
      allow read: if request.query.limit <= 1 && request.query.where.size() == 1;
    }
    
    // ==================== PETS COLLECTION ====================
    // Users can read all pets (to show pet list), but can only write their own
    match /pets/{petId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isResourceOwner();
    }
    
    // ==================== FOLDERS COLLECTION ====================
    // Users can only read/write their own folders
    match /folders/{folderId} {
      allow read: if isResourceOwner();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isResourceOwner();
    }
    
    // ==================== DIARY ENTRIES COLLECTION ====================
    // Users can only read/write their own diary entries
    match /diary_entries/{entryId} {
      allow read: if isResourceOwner();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isResourceOwner();
    }
    
    // ==================== REMINDERS COLLECTION ====================
    // Users can only read/write their own reminders
    match /reminders/{reminderId} {
      allow read: if isResourceOwner();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isResourceOwner();
    }
    
    // ==================== APPOINTMENTS COLLECTION ====================
    // Users can only read/write their own appointments
    match /appointments/{appointmentId} {
      allow read: if isResourceOwner();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isResourceOwner();
    }
    
    // ==================== HEALTH RECORDS COLLECTION ====================
    // Users can only read/write their own health records
    match /health_records/{recordId} {
      allow read: if isResourceOwner();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isResourceOwner();
    }
    
    // ==================== FEEDING SCHEDULE COLLECTION ====================
    // Users can only read/write their own feeding schedules
    match /feeding_schedule/{scheduleId} {
      allow read: if isResourceOwner();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isResourceOwner();
    }
    
    // ==================== NOTIFICATIONS COLLECTION ====================
    // Users can only read/write their own notifications
    match /notifications/{notificationId} {
      allow read: if isResourceOwner();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isResourceOwner();
    }
    
    // ==================== ACTIVITIES COLLECTION ====================
    // Users can only read/write their own activities
    match /activities/{activityId} {
      allow read: if isResourceOwner();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isResourceOwner();
    }
    
    // ==================== EXPENSES COLLECTION ====================
    // Users can only read/write their own expenses
    match /expenses/{expenseId} {
      allow read: if isResourceOwner();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isResourceOwner();
    }
    
    // ==================== VACCINATIONS COLLECTION ====================
    // Users can only read/write their own vaccination records
    match /vaccinations/{vaccinationId} {
      allow read: if isResourceOwner();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isResourceOwner();
    }
    
    // ==================== MEDICATIONS COLLECTION ====================
    // Users can only read/write their own medication records
    match /medications/{medicationId} {
      allow read: if isResourceOwner();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isResourceOwner();
    }
    
    // ==================== WEIGHT RECORDS COLLECTION ====================
    // Users can only read/write their own weight records
    match /weight_records/{recordId} {
      allow read: if isResourceOwner();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isResourceOwner();
    }
    
    // ==================== PHOTOS COLLECTION ====================
    // Users can only read/write their own photos
    match /photos/{photoId} {
      allow read: if isResourceOwner();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isResourceOwner();
    }
    
    // ==================== VIDEOS COLLECTION ====================
    // Users can only read/write their own videos
    match /videos/{videoId} {
      allow read: if isResourceOwner();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isResourceOwner();
    }

    // ==================== CONVERSATIONS COLLECTION ====================
    // Users can only access conversations they're part of
    function isConversationParticipant() {
      return isAuthenticated() && 
             (request.auth.uid == resource.data.participant_1 || 
              request.auth.uid == resource.data.participant_2);
    }
    
    function isConversationParticipantRequest() {
      return isAuthenticated() && 
             (request.auth.uid == request.resource.data.participant_1 || 
              request.auth.uid == request.resource.data.participant_2);
    }

    match /conversations/{conversationId} {
      allow read: if isConversationParticipant();
      allow create: if isConversationParticipantRequest();
      allow update: if isConversationParticipant();
      
      // Messages subcollection - allow authenticated users who are conversation participants
      match /messages/{messageId} {
        allow read: if isConversationParticipant();
        allow create: if isConversationParticipant() && request.resource.data.sender_id == request.auth.uid;
        allow update: if isConversationParticipant() && resource.data.sender_id == request.auth.uid;
        allow delete: if isConversationParticipant() && resource.data.sender_id == request.auth.uid;
        
        // Reactions subcollection
        match /reactions/{reactionId} {
          allow read: if isConversationParticipant();
          allow create, update, delete: if isConversationParticipant();
        }
      }
      
      // Typing indicators subcollection
      match /typing_indicators/{userId} {
        allow read: if isConversationParticipant();
        allow create, update, delete: if isConversationParticipant() && userId == request.auth.uid;
      }
    }

    // ==================== OTP REQUESTS COLLECTION ====================
    // Allow creating OTP requests without authentication (for forgot password)
    match /otp_requests/{otpId} {
      allow create: if true; // Anyone can create OTP request
      allow read, update: if resource.data.email == request.auth.email || request.auth == null;
    }

    // ==================== DATING PROFILES COLLECTION ====================
    // Users can access dating profiles for discovery
    match /users/{userId}/dating_profiles/{petId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);
    }

    // ==================== DATING LIKES COLLECTION ====================
    // Users can manage their likes
    match /users/{userId}/likes/{targetId} {
      allow read, create, update, delete: if isOwner(userId);
    }

    // ==================== DATING MATCHES COLLECTION ====================
    // Users can manage their matches
    match /users/{userId}/matches/{matchId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);
    }

    // ==================== BLOCKED USERS COLLECTION ====================
    // Users can manage their blocked users list
    match /users/{userId}/blocked_users/{blockedUserId} {
      allow read, create, delete: if isOwner(userId);
    }

    // ==================== REPORTS COLLECTION ====================
    // Users can create reports, admins can read
    match /reports/{reportId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated(); // In production, restrict to admins
    }

    // ==================== COMMUNITY COLLECTION ====================
    // Public read for posts, authenticated users can create/modify their own
    match /communities/{communityId} {
      // Posts subcollection
      match /posts/{postId} {
        allow read: if true; // Public read
        allow create: if isAuthenticated();
        allow update, delete: if isAuthenticated() && resource.data.created_by == request.auth.uid;
        
        // Comments subcollection
        match /comments/{commentId} {
          allow read: if true;
          allow create: if isAuthenticated();
          allow delete: if isAuthenticated() && resource.data.created_by == request.auth.uid;
        }
      }
      
      // Likes subcollection
      match /likes/{likeId} {
        allow read: if true;
        allow create: if isAuthenticated();
        allow delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      }
    }

    // ==================== TRENDING TOPICS COLLECTION ====================
    // Public read for trending topics
    match /trending_topics/{topicId} {
      allow read: if true;
      allow create, update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // ==================== EVENTS COLLECTION ====================
    // Public read for events, authenticated users can create and RSVP
    match /events/{eventId} {
      allow read: if true; // Public read
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.created_by == request.auth.uid;
      
      // Attendees subcollection
      match /attendees/{userId} {
        allow read: if true;
        allow create: if isAuthenticated() && userId == request.auth.uid;
        allow delete: if isAuthenticated() && userId == request.auth.uid;
      }
    }

    // ==================== TRAINING VIDEOS COLLECTION ====================
    // Public read for training videos, authenticated users can create and rate
    match /training_videos/{videoId} {
      allow read: if true; // Public read
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (resource.data.created_by == request.auth.uid || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['view_count', 'rating', 'rating_count']));
      allow delete: if isAuthenticated() && resource.data.created_by == request.auth.uid;
      
      // Ratings subcollection
      match /ratings/{ratingId} {
        allow read: if true;
        allow create: if isAuthenticated() && ratingId == request.auth.uid;
        allow update: if isAuthenticated() && ratingId == request.auth.uid;
        allow delete: if isAuthenticated() && ratingId == request.auth.uid;
      }
    }

    // ==================== LOST PETS COLLECTION ====================
    // Public read for lost pet posts (to find pets), authenticated users can create/manage their own
    match /lost_pets/{lostPetId} {
      allow read: if true; // Public read - anyone can search for lost pets
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isResourceOwner(); // Only owner can update/delete
    }
  }
}
